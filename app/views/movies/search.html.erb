<div class='offset-4 col-4 text-center'>
	<%= form_for :movie_title, url:  do |f| %>
	  	Which movie are you looking for? <%= f.text_field :search, placeholder: 'Name, actors, director...', :required => 'required', class:"form-control" %><br />
	  	<%= f.submit 'Look for this movie', class: 'form-group m-auto btn btn-info'%>
	<% end %>
</div>

<% if results != nil %>
	<table class ='table col-8'>
		<thead>
			<td>Movie name</td>
			<td>Release date</td>
			<td>Director</td>
			<td>Poster</td>
		</thead>
		<tbody>
			<% @results.each do |movie| %>
			<td><a href = <%= movie[:url] %> > <%= movie[:title] %> </a></td>
			<td><%= movie[:release] %></td>
			<td><%= movie[:director] %></td>			
			<td><img src=<%= movie[:poster] %> alt=<%= movie[:title] %> ></td>
			<% end %>
		</tbody>
<% end %>